<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="@dimen/play_bar_height"
        android:background="@color/red_bg"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/gedan_input_back"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@color/tran"
            android:src="@drawable/ic_ab_back_holo_light_am">
        </ImageView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:text="qq音乐歌单导入"
        android:textSize="30sp"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/qq_edit"
            android:hint="https://i.y.qq.com/n2/m/share/details/taoge.html?platform=11 appshare=android_qq appversion=10050006 hosteuin=oKn5NeEl7io57z** id=7674449134 ADTAG=qfshare"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            tools:ignore="HardcodedText">
        </EditText>
        <Button
            android:text="导入"
            android:id="@+id/qq_daoru"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="50dp"/>
    </LinearLayout>



</LinearLayout>
